<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventappprod">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="EventLife"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateEventActivity"
            android:label="Return to Dashboard"
            android:parentActivityName=".DashBoard" />
        <activity android:name=".Register" />
        <activity
            android:name=".RSVPEventsActivity"
            android:label="Return to Profile"
            android:parentActivityName=".Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CreatedEventsActivity"
            android:label="Return to Profile"
            android:parentActivityName=".Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".FriendsListActivity"
            android:label="Return to Profile"
            android:parentActivityName=".Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EventActivity"
            android:label="Return to Dashboard"
            android:parentActivityName=".DashBoard" />
        <activity android:name=".Explore" />
        <activity android:name=".DashBoard" />
        <activity android:name=".Profile" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>